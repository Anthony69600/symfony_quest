{% extends 'base.html.twig' %}

{% block title %}Actor:{{actor.name}}{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <h2>{{actor.name}}</h2>
    </br>
    <h3> Dans quel série(s) :</h3>
    {% for prog in actor.programs %}
        {{prog.title}}
        </br>
        <a href="{{ path("program_show", { id: prog.id }) }}">Voir la série</a>
        </br>
    {% endfor %}

{% endblock %}
