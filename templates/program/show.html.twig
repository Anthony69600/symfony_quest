{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
        <div>
            <p>Critiques :</p>
            <p>{% for review in reviews %}
                {{review.note}}/10</br>Contenu :{{review.ReviewText}}</br>autheur:{{review.author}}
                {% endfor %}
            </p>
        </div>
        </br>
        <div>{% for season in seasons %}
            <p> Saison {{season.number}}
            <a href="{{ path("program_season_show", { program: program.id, season: season.id }) }}">Voir la fiche de la saison</a>
            </p>

            {% endfor %}
        </div>
        <strong>Acteurs :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li><a href="{{path('actor_show', {id: actor.id})}}"><li>{{ actor.name }}</a></li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}